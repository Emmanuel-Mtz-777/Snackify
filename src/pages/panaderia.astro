---
import "../styles/global.css";
import Principal from '../layouts/Principal.astro';
import CategoryBar from "../components/CategoryBar.astro";
import Banner from '../components/Banner.astro'
import productsData from '../utils/productsData';
import ProductCards from "../components/ProductCards.astro";

const products = productsData;
---

<Principal>
	<CategoryBar/>
	
	<main class="bg-[#c0c0c0] w-full flex flex-col items-center px-4">
		<h2 class="text-4xl font-bold m-5">Nuestra panaderia.</h2>
		<ProductCards products={products} category="panaderia" />
	</main>

</Principal>
